{
  "name": "monaco-editor-component",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "bun@1.0.11",
  "description": "Monaco Editor and Viewer Base on React and Tailwindcss.",
  "author": "Talljack",
  "license": "MIT",
  "homepage": "https://github.com/Talljack/monaco-editor-component#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Talljack/monaco-editor-component.git"
  },
  "bugs": {
    "url": "https://github.com/Talljack/monaco-editor-component/issues"
  },
  "keywords": [
    "typescript",
    "react",
    "monaco-editor",
    "tailwindcss",
    "monaco-editor-component",
    "monaco-diff-editor",
    "vue",
    "monaco-editor-vue",
    "monaco-editor-react"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "require": "./dist/react.cjs",
      "import": "./dist/react.js"
    },
    "./vue": {
      "types": "./dist/vue.d.ts",
      "require": "./dist/vue.cjs",
      "import": "./dist/vue.js"
    }
  },
  "main": "./dist/react.js",
  "module": "./dist/react.js",
  "types": "./dist/type.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx .",
    "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier --cache --write .",
    "prepublishOnly": "bun run build",
    "release": "bumpp && npm publish",
    "test": "vitest",
    "typecheck": "tsc --incremental --noEmit && rimraf tsconfig.tsbuildinfo",
    "clean": "rimraf dist node_modules",
    "postinstall": "simple-git-hooks"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "bumpp": "^9.2.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "esno": "^4.0.0",
    "lint-staged": "^15.1.0",
    "picocolors": "^1.0.0",
    "prettier": "^3.1.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "tailwindcss": "^3.3.5",
    "tailwindcss-animate": "^1.0.7",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^0.34.6"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lint && bun lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --write"
    ],
    "package.json": [
      "prettier --write"
    ],
    "*.{scss,less,styl,html,.md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "monaco-editor": "^0.44.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vue": "^3.3.8"
  }
}
