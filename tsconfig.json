{
  "compilerOptions": {
    "target": "es2020",
    "jsx": "react-jsx",
    "lib": ["esnext", "dom"],
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "types": ["monaco-editor"],
    "strict": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  }
}
